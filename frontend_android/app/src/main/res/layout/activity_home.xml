<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.enthusiast94.social_auth_bootstrap.app.activities.ContentActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <include layout="@layout/toolbar" />

            <android.support.design.widget.TabLayout
                android:id="@+id/tablayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                app:tabIndicatorColor="@android:color/white"
                />

        </android.support.design.widget.AppBarLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <com.github.clans.fab.FloatingActionMenu
                android:id="@+id/fab_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|right"
                android:paddingBottom="8dp"
                android:paddingRight="8dp"
                fab:menu_fab_size="normal"
                fab:menu_showShadow="true"
                fab:menu_colorNormal="@color/primary"
                fab:menu_backgroundColor="@color/white_opaque_70"
                >

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/wait_or_walk_fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_timer_white_24dp"
                    fab:fab_size="mini"
                    fab:fab_label="@string/action_wait_or_walk"
                    fab:menu_colorNormal="@color/primary"
                    />

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/journey_planner_fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_directions_white_24dp"
                    fab:fab_size="mini"
                    fab:fab_label="@string/action_get_to_somewhere"
                    fab:menu_colorNormal="@color/primary"
                    />

            </com.github.clans.fab.FloatingActionMenu>

        </FrameLayout>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:itemTextColor="@color/secondary_text_light"
        app:itemIconTint="@color/secondary_text_light"
        app:menu="@menu/menu_nav"
        app:headerLayout="@layout/menu_nav_header"
        />

</android.support.v4.widget.DrawerLayout>