<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background_light</item>
    </style>

    <style name="EditText">
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="TextViewHeading" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/primary_text_light</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="GoogleLoginButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="colorButtonNormal">@color/google_plus_red</item>
    </style>

    <style name="FacebookLoginButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="colorButtonNormal">@color/facebook_blue</item>
    </style>

    <style name="AccentButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="colorButtonNormal">@color/accent</item>
    </style>


</resources>
